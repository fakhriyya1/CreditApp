@model IEnumerable<GuarantorDto>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <table class="table table-striped" id="dataTable">
                    <thead>
                        <tr>
                            <th>Loan Id</th>
                            <th>Full Name</th>
                            <th>PIN</th>
                            <th>Phone Number</th>
                            <th>Relationship</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LoanId</td>
                                <td>@item.FullName</td>
                                <td>@item.PIN</td>
                                <td>@item.PhoneNumber1</td>
                                <td>@item.RelationshipToApplicant</td>
                                <td>
                                    <a asp-controller="Guarantor" asp-action="GuarantorDetails" asp-route-id="@item.Id" class="btn btn-info text-white">Info</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/dataTable.js"></script>
}

